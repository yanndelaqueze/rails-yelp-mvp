<h2><%= @restaurant.name %></h2>
<h3>Category : <%= @restaurant.category %> restaurant</h3>
<h3>Adresse : <%= @restaurant.address %></h3>
<h3>Phone : <%= @restaurant.phone_number %></h3>

<h4>Reviews :</h4>

<% @restaurant.reviews.each do |review|  %>
  <li><%= review.content %></li>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.select :rating, options_for_select(%w[1 2 3 4 5]) %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to Restaurant list", restaurants_path  %>
